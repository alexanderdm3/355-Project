<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebckgrnd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RiverConditions">

    <ImageButton

        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/riverConfirm"
        android:scaleType="fitCenter"
        android:background="@null"
        app:srcCompat="@drawable/boat_icon"
        android:layout_marginBottom="174dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:id="@+id/aCTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCEDC8"
        android:backgroundTint="#DCEDC8"
        android:popupBackground="#DCEDC8"
        android:text=""
        android:textAlignment="viewStart"
        android:layout_marginBottom="78dp"
        android:layout_above="@+id/riverConfirm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="Search River:"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_alignBottom="@+id/aCTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
